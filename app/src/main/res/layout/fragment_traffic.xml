<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/traffic_color_red"
        android:layout_width="@dimen/circle_radius"
        android:layout_height="@dimen/circle_radius"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/traffic_lights_margin_top"
        android:background="@drawable/circle_red" />

    <View
        android:id="@+id/traffic_color_yellow"
        android:layout_width="@dimen/circle_radius"
        android:layout_height="@dimen/circle_radius"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/traffic_lights_margin_top"
        android:background="@drawable/circle_yellow" />

    <View
        android:id="@+id/traffic_color_green"
        android:layout_width="@dimen/circle_radius"
        android:layout_height="@dimen/circle_radius"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/traffic_lights_margin_top"
        android:background="@drawable/circle_green" />

</androidx.appcompat.widget.LinearLayoutCompat>